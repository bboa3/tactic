{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "strict": false,
    "lib": ["esnext"],
    "esModuleInterop": true,
  },
  "include": [
    "src"
  ]
}